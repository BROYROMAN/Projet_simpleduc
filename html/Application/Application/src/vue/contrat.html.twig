{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Gestion des équipes {% endblock %}
       
{% block contenu %} <h1> Gestion des équipes </h1> 

{% if form.valide is defined %} 
    {% if form.valide == true %}
       <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
       {% else %}  
       <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
    {% endif %}         
{% endif %}         
    
<div class="panel">
  <!-- Default panel contents -->
  <div class="panel-heading background-violet">Liste des Contrats - <a href="index.php?page=contratajout" class="blanc">Ajouter un contrat</a></div>

  <!-- Table -->
  <div class="table-responsive">
  <table class="table table-hover table-striped">
      <tr><th>Nom</th><th>Date signature</th><th>Délai Production</th><th>Cout Global</th></tr>
   {% for e in liste %}
          <tr><td>{{e.nom}}</td><td>{{e.datesignature|date('d/m/Y')}}  </td><td>{{e.delaiproduction|date('d/m/Y')}}  </td><td>{{e.coutglobal}}  </td><td> <div class="btn-group btn-group-lg"><a href="index.php?page=contratmodif&id={{e.id}}"><span class="glyphicon glyphicon-pencil violet" aria-hidden="true"></span></a></div></td><td><div class="btn-group btn-group-lg"><a href="index.php?page=contrat&id={{e.id}}"><span class="glyphicon glyphicon-trash violet" aria-hidden="true"></span></a></div></td></tr> 
   {% endfor %}    
  </table>
  </div>
</div>

{% endblock %} 


