{% extends "base.html.twig" %}

{% block title %} {{ parent() }} - Modification d'un outils {% endblock %}
       
{% block contenu %} <h1> Modification d'un outils </h1> 

{% if form.outils is defined %} 
    {% if form.outils != null %}    
        <div class="panel-body">
        <form  class="form-signin" action="index.php?page=outilsmodif" method="post" enctype="application/x-www-form-urlencoded">
        <input type="hidden" id="id" name="id" value="{{form.outils.id}}"/> 
        <label for="libelle" class="sr-only">Libellé:</label>
        <input type="text" id="libelle" name="libelle" class="form-control" placeholder="Saisir un libellé" value="{{form.outils.libelle}}" required autofocus>
        <label for="version" class="sr-only">Version:</label>
          <input type="text" id="version" name="version" class="form-control" placeholder="Saisir une version" value="{{form.outils.version}}" required autofocus>
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="btModifier">Ajouter</button>
        </form>
        </div> 
    {% else %}  
        {% if form.valide == true %}
            <h1 class="h3 mb-3 font-weight-normal">{{ form.message }} </h1>
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=outils" class="violet">Retourner sur la liste des outils</a></h1>
        {% else %}    
            <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
            <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=outils" class="violet">Retourner sur la liste des outils</a></h1>
        {% endif %} 
    {% endif %} 
{% else %} 
     <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1> 
     <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=outils" class="violet">Retourner sur la liste des outils</a></h1>
       
{% endif %}
{% endblock %} 
